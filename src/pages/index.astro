---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="CB50">

  <!-- ==================== HERO ==================== -->
  <section class="section min-h-screen flex flex-col justify-center items-center relative overflow-hidden">
    <!-- Hero background photo — super saturated / verfremdet -->
    <img src="/photos/strandperle_hamburg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover scale-110" style="filter: saturate(2.5) contrast(1.15) brightness(1.05) blur(1.5px);" loading="eager" />
    <!-- Color tint glow -->
    <div class="absolute inset-0" style="background: radial-gradient(ellipse at 50% 40%, rgba(194,112,62,0.2) 0%, rgba(120,60,180,0.08) 50%, transparent 80%); mix-blend-mode: overlay;"></div>
    <!-- Subtle vignette -->
    <div class="absolute inset-0" style="background: radial-gradient(ellipse at center, transparent 40%, rgba(26,29,46,0.25) 100%);"></div>
    <!-- Bottom fade for transition -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[#f4f1ec]/70"></div>

    <div class="relative z-10 text-center max-w-3xl mx-auto space-y-10">

      <!-- Title -->
      <div class="space-y-4">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-['Space_Grotesk',sans-serif] font-bold leading-tight tracking-tight text-[#1a1d2e] inline-block">
          <span style="background: rgba(244,241,236,0.8); padding: 4px 16px; border-radius: 4px; box-decoration-break: clone; -webkit-box-decoration-break: clone;">Chris wird 50</span>
        </h1>
        <p class="text-lg md:text-xl font-light text-[#2a2d3a]">
          <span style="background: rgba(244,241,236,0.7); padding: 2px 12px; border-radius: 3px;">Halbes Jahrhundert. Kein Grund zur Panik.</span>
        </p>
      </div>

      <!-- Countdown -->
      <div class="flex justify-center">
      <div id="countdown" class="inline-flex items-center justify-center gap-4 md:gap-6" style="background: rgba(244,241,236,0.75); padding: 12px 24px; border-radius: 6px;">
        <div class="flex flex-col items-center">
          <span id="cd-days" class="cd-digit">000</span>
          <span class="cd-label">Tage</span>
        </div>
        <span class="cd-sep">:</span>
        <div class="flex flex-col items-center">
          <span id="cd-hours" class="cd-digit">00</span>
          <span class="cd-label">Std</span>
        </div>
        <span class="cd-sep">:</span>
        <div class="flex flex-col items-center">
          <span id="cd-minutes" class="cd-digit">00</span>
          <span class="cd-label">Min</span>
        </div>
        <span class="cd-sep">:</span>
        <div class="flex flex-col items-center">
          <span id="cd-seconds" class="cd-digit">00</span>
          <span class="cd-label">Sek</span>
        </div>
      </div>
      </div>

      <!-- Scroll hint -->
      <div class="pt-8">
        <div class="w-px h-12 bg-gradient-to-b from-transparent to-[#1a1d2e]/15 mx-auto"></div>
      </div>
    </div>
  </section>

  <!-- ==================== DETAILS ==================== -->
  <section class="section py-32 md:py-40">
    <div class="max-w-5xl mx-auto space-y-16">

      <!-- Greeting -->
      <div class="fade-up max-w-2xl">
        <div class="accent-line mb-6"></div>
        <p class="text-2xl md:text-3xl font-light leading-relaxed text-[#2a2d3a]">
          Ich werde 50. Lasst uns das feiern. Mit gutem Essen, guten Drinks, guter Musik und vor allem...mit euch!
        </p>
      </div>

      <!-- Quick info -->
      <div class="stagger-group">
        <div class="stagger-item card card-hover p-8 space-y-4 max-w-md">
          <p class="mono-label">Wann</p>
          <p class="text-xl font-['Space_Grotesk',sans-serif] font-medium text-[#1a1d2e]">
            19. September 2026
          </p>
          <p class="text-sm text-[#8b8fa3]">Ab 15:00 Uhr — Treffpunkt Strandperle</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== TIMETABLE + MAP ==================== -->
  <section class="relative" id="timetable">

    <!-- Sticky viewport: stays fixed while section scrolls behind -->
    <div id="timeline-viewport" class="sticky top-0 h-screen w-full flex flex-col">
      <!-- Map — top 50% -->
      <div class="relative flex-none h-[50vh] w-full bg-[#eae7e2]"><div id="map" class="w-full h-full"></div>
        <div class="absolute bottom-0 left-0 right-0 h-px bg-[#1a1d2e]/[0.06]"></div>
      </div>

      <!-- Horizontal-scrolling timeline — bottom 50% -->
      <div id="timeline-track-wrapper" class="relative flex-none h-[50vh] overflow-hidden">
        <div id="timeline-track" class="flex items-stretch h-full">

          <!-- Intro -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="0">
            <img src="/photos/strandperle_hamburg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover scale-105" style="filter: saturate(2.5) contrast(1.15) brightness(1.05);" loading="lazy" />
            <div class="absolute inset-0" style="background: radial-gradient(ellipse at center, transparent 40%, rgba(26,29,46,0.2) 100%);"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec]/70 via-[#f4f1ec]/30 to-[#f4f1ec]/50"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-4">
              <div class="accent-line mb-2"></div>
              <p class="mono-label"><span style="background: rgba(244,241,236,0.75); padding: 2px 8px; border-radius: 3px;">Der Tag</span></p>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e] leading-snug">
                <span style="background: rgba(244,241,236,0.8); padding: 2px 10px; border-radius: 4px; box-decoration-break: clone; -webkit-box-decoration-break: clone;">Von der Elbe durch den Hafen in die Küche.</span>
              </h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                <span style="background: rgba(244,241,236,0.7); padding: 2px 8px; border-radius: 3px; box-decoration-break: clone; -webkit-box-decoration-break: clone;">Ein Nachmittag am Wasser, eine Fahrt über die Elbe und ein gemeinsamer Abend in der Küche. Fünf Stationen quer durch Hamburg.</span>
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-3"><span style="background: rgba(244,241,236,0.7); padding: 2px 8px; border-radius: 3px;">19. September 2026 — Hamburg</span></p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- 15:00 Strandperle -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="1">
            <img src="/photos/strandperle_hamburg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.4]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/40 to-[#f4f1ec]/30"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-3">
              <div class="flex items-center gap-4 mb-4">
                <div class="timeline-dot w-[11px] h-[11px] rounded-full border-2 border-[#c2703e] bg-[#f4f1ec] transition-all duration-500 flex-shrink-0"></div>
                <p class="font-mono text-[#c2703e] text-sm">15:00</p>
              </div>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e]">Strandperle</h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                Ankommen, Umtrunk, Füße in den Sand. Wir starten entspannt am schönsten Strand Hamburgs.
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-2">Övelgönne 60, 22605 Hamburg</p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Elbe view -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center justify-center relative" data-stop="2">
            <div class="absolute inset-0">
              <img
                src="/photos/elbstrand-strandperle.jpg"
                alt="Elbstrand bei der Strandperle"
                class="w-full h-full object-cover opacity-90"
              />
              <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/20 to-[#f4f1ec]/60"></div>
            </div>
            <div class="relative z-10 px-8 md:px-16 max-w-md space-y-3">
              <p class="font-mono text-[11px] text-[#8b8fa3] uppercase tracking-[0.2em]">Strandperle</p>
              <p class="font-['Space_Grotesk',sans-serif] text-xl md:text-2xl text-[#2a2d3a] font-light leading-relaxed">
                Sand unter den Füßen, Blick auf die Elbe, Containerschiffe ziehen vorbei.
              </p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Walk to pier -->
          <div class="timeline-stop timeline-walk flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="3" id="walk-to-pier">
            <img src="/photos/bild-hintergrundbild-maritimes-erbe.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.35]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/40 to-[#f4f1ec]/30"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-3">
              <div class="flex items-center gap-4 mb-4">
                <div class="timeline-dot w-[11px] h-[11px] rounded-full border-2 border-[#c8cad4] bg-[#f4f1ec] transition-all duration-500 flex-shrink-0"></div>
                <p class="font-mono text-[#c2703e] text-sm">16:45</p>
              </div>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e]">Zum Anleger</h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                Kurzer Spaziergang am Elbstrand entlang zum Anleger Övelgönne.
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-2">Strandperle → Anleger Övelgönne</p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Museumshafen photo -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center justify-center relative" data-stop="4">
            <div class="absolute inset-0">
              <img
                src="/photos/Museumshafen-Oevelgoenne-Hamburg.jfif"
                alt="Museumshafen Övelgönne"
                class="w-full h-full object-cover opacity-90"
              />
              <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/20 to-[#f4f1ec]/60"></div>
            </div>
            <div class="relative z-10 px-8 md:px-16 max-w-md space-y-3">
              <p class="font-mono text-[11px] text-[#8b8fa3] uppercase tracking-[0.2em]">Museumshafen</p>
              <p class="font-['Space_Grotesk',sans-serif] text-xl md:text-2xl text-[#2a2d3a] font-light leading-relaxed">
                Historische Schiffe, Elbblick, Abendlicht. Kurzer Halt am Museumshafen bevor es auf’s Wasser geht.
              </p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- 17:00 Barkasse -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="5">
            <img src="/photos/an-den-landungsbrucken.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.4]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/40 to-[#f4f1ec]/30"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-3">
              <div class="flex items-center gap-4 mb-4">
                <div class="timeline-dot w-[11px] h-[11px] rounded-full border-2 border-[#c8cad4] bg-[#f4f1ec] transition-all duration-500 flex-shrink-0"></div>
                <p class="font-mono text-[#c2703e] text-sm">17:00</p>
              </div>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e]">Barkasse</h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                Abfahrt Anleger Övelgönne. Mit der Barkasse über die Elbe Richtung Landungsbrücken — Hamburg von seiner besten Seite.
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-2">Anleger Övelgönne → Landungsbrücken, Brücke 1</p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Boat photo 1: Barkasse -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center justify-center relative overflow-hidden" data-stop="6">
            <img
              src="/photos/barkasse.jpg"
              alt="Barkassenfahrt auf der Elbe"
              class="absolute inset-0 w-full h-full object-cover opacity-70"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/15 to-[#f4f1ec]/50"></div>
            <div class="relative z-10 text-center max-w-sm space-y-3 px-8">
              <p class="font-mono text-[11px] text-[#8b8fa3] uppercase tracking-[0.2em]">Auf der Elbe</p>
              <p class="font-['Space_Grotesk',sans-serif] text-xl md:text-2xl text-[#2a2d3a] font-light leading-relaxed">
                Hamburger Skyline vom Wasser. Elbphilharmonie, Kräne, Containerschiffe — die Stadt von ihrer schönsten Seite.
              </p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Boat photo 2: Hamburger Hafen -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center justify-center relative overflow-hidden" data-stop="7">
            <img
              src="/photos/barkasse1.jpg"
              alt="Hamburger Hafen von der Barkasse"
              class="absolute inset-0 w-full h-full object-cover opacity-70"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/15 to-[#f4f1ec]/50"></div>
            <div class="relative z-10 text-center max-w-sm space-y-3 px-8">
              <p class="font-mono text-[11px] text-[#8b8fa3] uppercase tracking-[0.2em]">Hamburger Hafen</p>
              <p class="font-['Space_Grotesk',sans-serif] text-xl md:text-2xl text-[#2a2d3a] font-light leading-relaxed">
                Vorbei an Docks und Werften. Der Geruch von Salz und Diesel — Hafenluft in Reinform.
              </p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- 18:30 Landungsbrücken -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="8">
            <img src="/photos/landungsbr%C3%BCcken.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.4]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/40 to-[#f4f1ec]/30"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-3">
              <div class="flex items-center gap-4 mb-4">
                <div class="timeline-dot w-[11px] h-[11px] rounded-full border-2 border-[#c8cad4] bg-[#f4f1ec] transition-all duration-500 flex-shrink-0"></div>
                <p class="font-mono text-[#c2703e] text-sm">18:30</p>
              </div>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e]">Landungsbrücken</h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                Ankunft Brücke 1. Dann zu Fuß durch die Hafengegend ins Portugiesenviertel.
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-2">Landungsbrücken, Brücke 1</p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- Portugiesenviertel photo -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center justify-center relative overflow-hidden" data-stop="9">
            <img
              src="/photos/tausende-menschen-im-portugiesenviertel.webp"
              alt="Portugiesenviertel Hamburg"
              class="absolute inset-0 w-full h-full object-cover opacity-70"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/15 to-[#f4f1ec]/50"></div>
            <div class="relative z-10 text-center max-w-sm space-y-3 px-8">
              <p class="font-mono text-[11px] text-[#8b8fa3] uppercase tracking-[0.2em]">Portugiesenviertel</p>
              <p class="font-['Space_Grotesk',sans-serif] text-xl md:text-2xl text-[#2a2d3a] font-light leading-relaxed">
                Durch enge Gassen vorbei an Tapasbars und Fado-Klängen. Hamburgs südländischste Ecke.
              </p>
            </div>
            <div class="absolute right-0 top-[20%] bottom-[20%] w-px bg-[#1a1d2e]/[0.06]"></div>
          </div>

          <!-- 19:00 La Cocina -->
          <div class="timeline-stop flex-shrink-0 w-screen md:w-[50vw] h-full flex items-center px-8 md:px-16 relative overflow-hidden" data-stop="10">
            <img src="/photos/LaCocina-Hamburg-11-683x1024-1.jpg" alt="" class="absolute inset-0 w-full h-full object-cover opacity-[0.4]" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-[#f4f1ec] via-[#f4f1ec]/40 to-[#f4f1ec]/30"></div>
            <div class="relative z-10 timeline-card max-w-md space-y-3">
              <div class="flex items-center gap-4 mb-4">
                <div class="timeline-dot w-[11px] h-[11px] rounded-full border-2 border-[#c8cad4] bg-[#f4f1ec] transition-all duration-500 flex-shrink-0"></div>
                <p class="font-mono text-[#c2703e] text-sm">19:00</p>
              </div>
              <h3 class="font-['Space_Grotesk',sans-serif] text-2xl md:text-3xl text-[#1a1d2e]">Küchenparty</h3>
              <p class="text-sm text-[#4a4d5e] leading-relaxed">
                La Cocina — gemeinsam kochen, essen, trinken. Keine Zuschauer, alle machen mit.
              </p>
              <p class="font-mono text-[11px] text-[#8b8fa3] mt-2">La Cocina, Ludwig-Erhard-Straße 37</p>
            </div>
          </div>

        </div>
        <!-- Progress bar -->
        <div class="absolute bottom-0 left-0 right-0 z-30 h-[2px] bg-[#1a1d2e]/[0.06]">
          <div id="timeline-progress" class="h-full bg-[#c2703e]/50 w-0 transition-none"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- ==================== PROGRAMM-ÜBERSICHT ==================== -->
  <section class="section py-24 md:py-32">
    <div class="max-w-3xl mx-auto fade-up">
      <div class="accent-line mb-6"></div>
      <p class="mono-label mb-3">Auf einen Blick</p>
      <h2 class="font-['Space_Grotesk',sans-serif] text-3xl md:text-4xl text-[#1a1d2e] mb-12">Das Programm</h2>

      <div class="space-y-0">
        <!-- 15:00 -->
        <div class="flex gap-6 items-start py-6 border-b border-[#1a1d2e]/[0.06]">
          <p class="font-mono text-[#c2703e] text-sm w-16 flex-shrink-0 pt-0.5">15:00</p>
          <div>
            <h3 class="font-['Space_Grotesk',sans-serif] text-lg text-[#1a1d2e] mb-1">Strandperle</h3>
            <p class="text-sm text-[#4a4d5e] leading-relaxed">Ankommen &amp; Umtrunk am Elbstrand</p>
            <p class="font-mono text-[11px] text-[#8b8fa3] mt-1">Övelgönne 60, 22605 Hamburg</p>
          </div>
        </div>
        <!-- 16:45 -->
        <div class="flex gap-6 items-start py-6 border-b border-[#1a1d2e]/[0.06]">
          <p class="font-mono text-[#c2703e] text-sm w-16 flex-shrink-0 pt-0.5">16:45</p>
          <div>
            <h3 class="font-['Space_Grotesk',sans-serif] text-lg text-[#1a1d2e] mb-1">Spaziergang zum Anleger</h3>
            <p class="text-sm text-[#4a4d5e] leading-relaxed">Am Elbstrand entlang zum Anleger Övelgönne</p>
          </div>
        </div>
        <!-- 17:00 -->
        <div class="flex gap-6 items-start py-6 border-b border-[#1a1d2e]/[0.06]">
          <p class="font-mono text-[#c2703e] text-sm w-16 flex-shrink-0 pt-0.5">17:00</p>
          <div>
            <h3 class="font-['Space_Grotesk',sans-serif] text-lg text-[#1a1d2e] mb-1">Barkassenfahrt</h3>
            <p class="text-sm text-[#4a4d5e] leading-relaxed">Mit der Barkasse über die Elbe Richtung Landungsbrücken</p>
            <p class="font-mono text-[11px] text-[#8b8fa3] mt-1">Anleger Övelgönne → Landungsbrücken, Brücke 1</p>
          </div>
        </div>
        <!-- 18:30 -->
        <div class="flex gap-6 items-start py-6 border-b border-[#1a1d2e]/[0.06]">
          <p class="font-mono text-[#c2703e] text-sm w-16 flex-shrink-0 pt-0.5">18:30</p>
          <div>
            <h3 class="font-['Space_Grotesk',sans-serif] text-lg text-[#1a1d2e] mb-1">Landungsbrücken</h3>
            <p class="text-sm text-[#4a4d5e] leading-relaxed">Zu Fuß durch die Hafengegend ins Portugiesenviertel</p>
          </div>
        </div>
        <!-- 19:00 -->
        <div class="flex gap-6 items-start py-6">
          <p class="font-mono text-[#c2703e] text-sm w-16 flex-shrink-0 pt-0.5">19:00</p>
          <div>
