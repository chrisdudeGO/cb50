---
export const prerender = false;

import { isAuthenticated } from '../../lib/auth';

const authenticated = isAuthenticated(Astro.request.headers.get('cookie'));
if (authenticated) {
  return Astro.redirect('/admin');
}
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login — CB50</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #f4f1ec;
      color: #1a1d2e;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-card {
      background: white;
      border-radius: 12px;
      padding: 3rem;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 4px 24px rgba(26, 29, 46, 0.08);
    }
    h1 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .subtitle {
      color: #8b8fa3;
      font-size: 0.875rem;
      margin-bottom: 2rem;
    }
    label {
      display: block;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #8b8fa3;
      margin-bottom: 0.5rem;
    }
    input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid #e5e2dc;
      border-radius: 8px;
      font-size: 1rem;
      font-family: inherit;
      background: #faf9f7;
      color: #1a1d2e;
      outline: none;
      transition: border-color 0.2s;
    }
    input:focus {
      border-color: #c2703e;
    }
    button {
      width: 100%;
      margin-top: 1.5rem;
      padding: 0.875rem;
      background: #1a1d2e;
      color: #f4f1ec;
      border: none;
      border-radius: 8px;
      font-size: 0.875rem;
      font-weight: 600;
      font-family: 'Space Grotesk', sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      cursor: pointer;
      transition: background 0.2s;
    }
    button:hover { background: #2a2d3e; }
    button:disabled { opacity: 0.5; cursor: not-allowed; }
    .error {
      margin-top: 1rem;
      padding: 0.75rem;
      background: #fef2f2;
      color: #b91c1c;
      border-radius: 8px;
      font-size: 0.875rem;
      text-align: center;
      display: none;
    }
  </style>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="login-card">
    <h1>Gästeverwaltung</h1>
    <p class="subtitle">Chris wird 50 — Admin</p>
    <form id="login-form">
      <label for="password">Passwort</label>
      <input type="password" id="password" name="password" placeholder="Passwort eingeben" required autofocus />
      <button type="submit">Anmelden</button>
      <div id="error" class="error"></div>
    </form>
  </div>

  <script>
    document.getElementById('login-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target as HTMLFormElement;
      const btn = form.querySelector('button') as HTMLButtonElement;
      const errorEl = document.getElementById('error') as HTMLElement;
      const password = (form.querySelector('#password') as HTMLInputElement).value;

      btn.disabled = true;
      btn.textContent = '...';
      errorEl.style.display = 'none';

      try {
        const res = await fetch('/api/admin/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ password }),
        });

        if (res.ok) {
          window.location.href = '/admin';
        } else {
          const data = await res.json();
          errorEl.textContent = data.error || 'Anmeldung fehlgeschlagen';
          errorEl.style.display = 'block';
        }
      } catch {
        errorEl.textContent = 'Verbindungsfehler';
        errorEl.style.display = 'block';
      } finally {
        btn.disabled = false;
        btn.textContent = 'Anmelden';
      }
    });
  </script>
</body>
</html>
