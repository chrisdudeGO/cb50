  <script>
    let allGuests: any[] = [];

    async function loadGuests() {
      try {
        const res = await fetch('/api/admin/guests');
        if (res.status === 401) {
          window.location.href = '/admin/login';
          return;
        }
        const { guests, stats } = await res.json();
        allGuests = guests;

        // Update stats
        (document.getElementById('stat-total') as HTMLElement).textContent = stats.total;
        (document.getElementById('stat-dabei') as HTMLElement).textContent = stats.dabei;
        (document.getElementById('stat-unsicher') as HTMLElement).textContent = stats.unsicher;
        (document.getElementById('stat-absage') as HTMLElement).textContent = stats.absage;
        (document.getElementById('stat-personen') as HTMLElement).textContent = stats.personenGesamt;

        renderGuests(guests);
      } catch {
        (document.getElementById('guests-body') as HTMLElement).innerHTML =
          '<tr><td colspan="8" class="empty-state"><p>Fehler beim Laden</p></td></tr>';
      }
    }

    function renderGuests(guests: any[]) {
      const tbody = document.getElementById('guests-body') as HTMLElement;

      if (!guests.length) {
        tbody.innerHTML = '<tr><td colspan="8" class="empty-state"><p>Noch keine Anmeldungen</p></td></tr>';
        return;
      }

      tbody.innerHTML = guests.map((g: any) => {
        const badgeClass = g.dabei === 'Ja, bin dabei' ? 'badge-ja'
          : g.dabei === 'Noch unsicher' ? 'badge-unsicher' : 'badge-nein';

        return `<tr>
          <td><strong>${esc(g.name)}</strong></td>
          <td class="text-sm">${esc(g.email)}</td>
          <td><span class="badge ${badgeClass}">${esc(g.dabei)}</span></td>
          <td class="mono">${g.personen}</td>
          <td class="text-sm text-muted">${esc(g.ernaehrung) || 'â€”'}</td>
          <td class="text-sm text-muted">${esc(g.unvertraeglichkeiten) || 'â€”'}</td>
          <td class="text-sm text-muted">${esc(g.nachricht) || 'â€”'}</td>
          <td class="timestamp">${formatDate(g.created_at)}</td>
          <td>
            <div class="cell-actions">
              <button class="btn-edit" onclick="openEdit(${g.id})">âœŽ</button>
              <button class="btn-delete" onclick="openDelete(${g.id}, '${esc(g.name)}')">âœ•</button>
            </div>
          </td>
        </tr>`;
      }).join('');
    }

    function esc(s: string): string {
      if (!s) return '';
      return s.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').replace(/'/g, '&#039;');
    }

    function formatDate(d: string): string {
      if (!d) return '';
      const date = new Date(d);
      return date.toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit', year: '2-digit' })
        + ' ' + date.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
    }

    // Search
    document.getElementById('search')?.addEventListener('input', (e) => {
      const q = (e.target as HTMLInputElement).value.toLowerCase();
      const filtered = allGuests.filter((g: any) =>
        g.name.toLowerCase().includes(q) ||
        g.email.toLowerCase().includes(q) ||
        g.dabei.toLowerCase().includes(q) ||
        (g.nachricht || '').toLowerCase().includes(q)
      );
      renderGuests(filtered);
    });

    // Edit
    (window as any).openEdit = (id: number) => {
      const g = allGuests.find((g: any) => g.id === id);
      if (!g) return;
      (document.getElementById('edit-id') as HTMLInputElement).value = id.toString();
      (document.getElementById('edit-name') as HTMLInputElement).value = g.name;
      (document.getElementById('edit-email') as HTMLInputElement).value = g.email;
      (document.getElementById('edit-dabei') as HTMLSelectElement).value = g.dabei;
      (document.getElementById('edit-personen') as HTMLInputElement).value = g.personen;
      (document.getElementById('edit-ernaehrung') as HTMLSelectElement).value = g.ernaehrung || '';
      (document.getElementById('edit-unvertraeglichkeiten') as HTMLTextAreaElement).value = g.unvertraeglichkeiten || '';
      (document.getElementById('edit-nachricht') as HTMLTextAreaElement).value = g.nachricht || '';
      (document.getElementById('edit-modal') as HTMLElement).classList.add('active');
    };

    document.getElementById('btn-cancel-edit')?.addEventListener('click', () => {
      (document.getElementById('edit-modal') as HTMLElement).classList.remove('active');
    });

    document.getElementById('edit-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = parseInt((document.getElementById('edit-id') as HTMLInputElement).value);
      const data = {
        id,
        name: (document.getElementById('edit-name') as HTMLInputElement).value,
        email: (document.getElementById('edit-email') as HTMLInputElement).value,
        dabei: (document.getElementById('edit-dabei') as HTMLSelectElement).value,
        personen: parseInt((document.getElementById('edit-personen') as HTMLInputElement).value) || 1,
        ernaehrung: (document.getElementById('edit-ernaehrung') as HTMLSelectElement).value,
        unvertraeglichkeiten: (document.getElementById('edit-unvertraeglichkeiten') as HTMLTextAreaElement).value,
        nachricht: (document.getElementById('edit-nachricht') as HTMLTextAreaElement).value,
      };

      await fetch('/api/admin/guests', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      (document.getElementById('edit-modal') as HTMLElement).classList.remove('active');
      loadGuests();
    });

    // Delete
    (window as any).openDelete = (id: number, name: string) => {
      (document.getElementById('delete-id') as HTMLInputElement).value = id.toString();
      (document.getElementById('delete-name') as HTMLElement).textContent = name;
      (document.getElementById('delete-modal') as HTMLElement).classList.add('active');
    };

    document.getElementById('btn-cancel-delete')?.addEventListener('click', () => {
      (document.getElementById('delete-modal') as HTMLElement).classList.remove('active');
    });

    document.getElementById('btn-confirm-delete')?.addEventListener('click', async () => {
      const id = parseInt((document.getElementById('delete-id') as HTMLInputElement).value);

      await fetch('/api/admin/guests', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });

      (document.getElementById('delete-modal') as HTMLElement).classList.remove('active');
      loadGuests();
    });

    // Logout
    document.getElementById('btn-logout')?.addEventListener('click', () => {
      document.cookie = 'admin_session=; Path=/; Max-Age=0';
      window.location.href = '/admin/login';
    });

    // Init
    loadGuests();

    // ========== TABS ==========
    document.querySelectorAll('.tab-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        btn.classList.add('active');
        const tab = (btn as HTMLElement).dataset.tab;
        document.getElementById(`tab-${tab}`)?.classList.add('active');
        if (tab === 'planning') loadTasks();
      });
    });

    // ========== PLANNING / TASKS ==========
    async function loadTasks() {
      try {
        const res = await fetch('/api/admin/tasks');
        if (res.status === 401) { window.location.href = '/admin/login'; return; }
        const { sections, stats } = await res.json();

        // Progress
        const pct = stats.total > 0 ? Math.round((stats.done / stats.total) * 100) : 0;
        (document.getElementById('task-progress') as HTMLElement).style.width = pct + '%';
        (document.getElementById('task-progress-text') as HTMLElement).textContent = `${stats.done} / ${stats.total}`;

        const grid = document.getElementById('planning-grid') as HTMLElement;
        const sectionOrder = [
          'Vorab & Einladungen',
          'â‘  Strandperle',
          'â‘¡ Spaziergang Elbstrand',
          'â‘¢ Barkasse',
          'â‘£ LandungsbrÃ¼cken',
          'â‘¤ La Cocina',
          'Nachher & Logistik',
        ];

        const sectionIcons: Record<string, string> = {
          'Vorab & Einladungen': 'âœ‰ï¸',
          'â‘  Strandperle': 'ðŸ–ï¸',
          'â‘¡ Spaziergang Elbstrand': 'ðŸš¶',
          'â‘¢ Barkasse': 'ðŸš¢',
          'â‘£ LandungsbrÃ¼cken': 'âš“',
          'â‘¤ La Cocina': 'ðŸ½ï¸',
          'Nachher & Logistik': 'ðŸš•',
        };

        // Include sections from DB that might not be in the default order
        const allSections = [...sectionOrder];
        for (const s of Object.keys(sections)) {
          if (!allSections.includes(s)) allSections.push(s);
        }

        grid.innerHTML = allSections.filter(s => sections[s]).map((sectionName) => {
          const tasks = sections[sectionName] || [];
          const done = tasks.filter((t: any) => t.done).length;
          const icon = sectionIcons[sectionName] || 'ðŸ“‹';

          return `<div class="task-section">
            <div class="task-section-header">
              <span class="task-section-title">${icon} ${esc(sectionName)}</span>
              <span class="task-section-count">${done}/${tasks.length}</span>
            </div>
            <ul class="task-list">
              ${tasks.map((t: any) => `
                <li class="task-item">
                  <div class="task-checkbox ${t.done ? 'checked' : ''}" onclick="toggleTaskDone(${t.id})"></div>
                  <span class="task-label ${t.done ? 'done' : ''}" onclick="toggleTaskDone(${t.id})">${esc(t.title)}</span>
                </li>
              `).join('')}
            </ul>
            <div class="add-task-row">
              <input type="text" class="add-task-input" placeholder="Neue Aufgabe..." data-section="${esc(sectionName)}" onkeydown="if(event.key==='Enter')addNewTask(this)" />
              <button class="add-task-btn" onclick="addNewTask(this.previousElementSibling)">+</button>
            </div>
          </div>`;
        }).join('');

      } catch (err) {
        console.error('Tasks load error:', err);
      }
    }

    (window as any).toggleTaskDone = async (id: number) => {
      await fetch('/api/admin/tasks', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });
      loadTasks();
    };

    (window as any).removeTask = async (id: number) => {
      await fetch('/api/admin/tasks', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });
      loadTasks();
    };

    (window as any).addNewTask = async (input: HTMLInputElement) => {
      const title = input.value.trim();
      if (!title) return;
      const section = input.dataset.section || '';

      await fetch('/api/admin/tasks', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ section, title }),
      });
      input.value = '';
      loadTasks();
    };
  </script>
